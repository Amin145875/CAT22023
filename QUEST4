#include <iostream>

int main() {
    //bariables
    char input;
    //insert your data

    std::cout << "Enter a character: ";
    std::cin >> input;

    input = tolower(input); // convert to lowercase to avoid misidentifying characters

    if (input == 'a' || input == 'e' || input == 'i' || input == 'o' || input == 'u') {
        std::cout << "The character '" << input << "' is a vowel." << std::endl;
    } else {
        std::cout << " character '" << input << "' is not a vowel." << std::endl;
    }

    return 0;
}
